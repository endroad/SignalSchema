{   
    "definitions": 
    {
      "transitionValue": 
      {
        "type": "object",
        "properties": 
        {
          "duration": { "type": "number" },
          "interpolation" : { "type" : "string", "enum" : ["linear","ease-in","ease-out","ease-in-out","custom"] },
          "curve": { "type": "string" },
          "scope" : { "type" : "string", "enum" : ["permanent", "state-only"] }
        },
        "required": ["duration"]
      },
      "colorValue":
      {
        "type" : "string", 
        "pattern": "#([a-fA-F0-9]{8}|[a-fA-F0-9]{6})$"
      },
      "vec2":
      {
        "type":"array", 
        "items": {
          "type": "number"
        },
        "maxItems": 2,
        "minItems": 2
      },
      "vec3":
      {
        "type":"array", 
        "items": {
          "type": "number"
        },
        "maxItems": 3,
        "minItems": 3
      },
      "vec4":
      {
        "type":"array", 
        "items": {
          "type": "number"
        },
        "maxItems": 4,
        "minItems": 4
      },
      "extent":
      {
        "type":"object",
        "properties": 
        {
          "l" : {"type":"number"},
          "t" : {"type":"number"},
          "r" : {"type":"number"},
          "b" : {"type":"number"},

          "left" : {"type":"number"},
          "top" : {"type":"number"},
          "right" : {"type":"number"},
          "bottom" : {"type":"number"}
        },
        "additionalProperties": false
      },
      "key":
      {
        "type" : "string",
        "enum" : 
        [
          "validate", 
          "do", 
          "back", 
          "alt", 
          "previous", 
          "next", 
          "down", 
          "up", 
          "left", 
          "right", 
          "start", 
          "esc", 
          "aux0", 
          "aux1", 
          "aux2", 
          "aux3", 
          "interact"
        ] 
      }
    },
    "type" : "object",
